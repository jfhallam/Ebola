<p id="notice"><%= notice %></p>

<h2>
<%= @survey.number %>
Survey Results
<% unless @survey.name.blank? %>
(<%= @survey.name %>)
<% end %>
</h2>

<table class="table table-striped">
<!--
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>
-->
  <tbody>
  <% if @survey.completed_at %>
  <tr>
  	<th>Score</th>
  	<td><%= @survey.score %></td>
  </tr>
  <tr>
  	<th>Completed</th>
  	<td><%= @survey.completed_at %></td>
  </tr>
  <% end %>
  <% Survey.questions.each_with_index do |q,i| %>

  <tr>
  	<th><%= q %></th>
  	<td><%= @survey.send("q#{i}") %></td>
  </tr>
  <% end %>

  </tbody>
</table>



