<h1>Track Results</h1>

<div class="row">
  <div class="col-md-8">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Score</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.number %></td>
        <td><%= survey.score %></td>
        <td><%= "#{time_ago_in_words(survey.completed_at)} ago" if survey.completed_at %></td>
        <td><%= link_to 'Survey Details', survey %></td>
        <!--<td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path, :class => "btn btn-primary" %>

  </div>
</div>
